<%- include('./partials/header') %>

<% if(success.length>0){ %>
    <div class="fixed top-5 left-1/2 -translate-x-1/2 z-50 p-3 rounded-md bg-blue-500 shadow-lg animate-fade-in">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="min-h-screen flex flex-col bg-gradient-to-br from-blue-50 to-white">
    <div class="container mx-auto px-2 sm:px-6 py-10 flex flex-col md:flex-row flex-grow gap-6">
        <aside class="w-full md:w-1/4 flex-shrink-0 mb-8 md:mb-0">
            <nav class="bg-white rounded-lg shadow p-6 flex flex-col items-start sticky top-10">
                <a class="block w-fit mb-4 text-gray-700 hover:text-blue-600 font-medium transition-colors" href="/shop">All Products</a>
                <a class="block w-fit mb-2 text-blue-600 font-semibold" href="">Create new product</a>
            </nav>
        </aside>
        <main class="w-full md:w-3/4 bg-white p-6 sm:p-10 rounded-lg shadow-lg">
            <h2 class="text-2xl sm:text-3xl font-bold mb-6 text-gray-800">Create New Product</h2>
            <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data" class="space-y-8">
                <section>
                    <h3 class="text-lg font-semibold mb-4 text-gray-700">Product Details</h3>
                    <div class="mb-6">
                        <label class="block mb-2 font-medium text-gray-600">Product Image</label>
                        <input name="image" type="file" class="py-2 px-4 rounded border border-gray-300 w-full file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 transition" value="Select File">
                    </div>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <input name="name" type="text" placeholder="Product Name" class="border border-gray-300 p-3 rounded w-full focus:ring-2 focus:ring-blue-200 focus:outline-none" required>
                        <input name="price" type="text" placeholder="Product Price" class="border border-gray-300 p-3 rounded w-full focus:ring-2 focus:ring-blue-200 focus:outline-none" required>
                        <input name="discount" type="text" placeholder="Discount Price" class="border border-gray-300 p-3 rounded w-full focus:ring-2 focus:ring-blue-200 focus:outline-none">
                    </div>
                </section>
                <section>
                    <h3 class="text-lg font-semibold mb-4 text-gray-700">Panel Details</h3>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <input name="bgcolor" type="text" placeholder="Background Color" class="border border-gray-300 p-3 rounded w-full focus:ring-2 focus:ring-blue-200 focus:outline-none">
                        <input name="panelcolor" type="text" placeholder="Panel Color" class="border border-gray-300 p-3 rounded w-full focus:ring-2 focus:ring-blue-200 focus:outline-none">
                        <input name="textcolor" type="text" placeholder="Text Color" class="border border-gray-300 p-3 rounded w-full focus:ring-2 focus:ring-blue-200 focus:outline-none">
                    </div>
                </section>
                <div class="flex justify-end">
                    <input class="px-8 py-3 rounded bg-blue-500 hover:bg-blue-600 text-white font-semibold shadow transition-colors cursor-pointer" type="submit" value="Create New Product">
                </div>
            </form>
        </main>
    </div>
</div>
<%- include('./partials/footer') %>

<style>
@media (max-width: 640px) {
  .container { padding-left: 0.5rem; padding-right: 0.5rem; }
}
@keyframes fade-in {
  from { opacity: 0; transform: translateY(-10px); }
  to { opacity: 1; transform: translateY(0); }
}
.animate-fade-in { animation: fade-in 0.5s ease; }
</style>