<%- include('./partials/header') %>

<% if(error.length>0){ %>
    <div class="fixed top-6 left-1/2 -translate-x-1/2 z-50 px-6 py-3 rounded-lg bg-red-500 shadow-lg animate-bounce">
        <span class="text-white font-semibold">
            <%= error %>
        </span>
    </div>
<% } %>
<div class="w-full min-h-screen flex flex-col md:flex-row items-center justify-center  px-4 md:px-10 py-10 gap-10 md:gap-0">
    <div class="w-full md:w-1/2 flex items-center justify-center">
        <div class="w-full max-w-md bg-white/80 p-8 md:p-12">
            <h3 class="text-3xl md:text-4xl font-extrabold mb-2 text-yellow-700">Welcome to <span class="text-blue-400 font-extrabold">BagShop</span></h3>
            <h4 class="text-lg md:text-2xl mb-6 text-gray-700 font-semibold">Create your account</h4>
            <form autocomplete="off" action="/users/register" method="post" class="space-y-4">
                <input class="bg-zinc-100 w-full px-4 py-3 border border-zinc-200 rounded-lg focus:ring-2 focus:ring-yellow-300 transition" type="text" placeholder="Full Name" name="fullname">
                <input class="bg-zinc-100 w-full px-4 py-3 border border-zinc-200 rounded-lg focus:ring-2 focus:ring-yellow-300 transition" type="email" placeholder="Email" name="email">
                <input class="bg-zinc-100 w-full px-4 py-3 border border-zinc-200 rounded-lg focus:ring-2 focus:ring-yellow-300 transition" type="password" placeholder="Password" name="password">
                <button type="submit" class="w-full py-3 bg-yellow-500 hover:bg-yellow-600 text-white font-bold rounded-lg shadow transition">Register</button>
            </form>
        </div>
    </div>
    <div class="w-full md:w-1/2 flex items-center justify-center mt-10 md:mt-0">
        <div class="w-full max-w-md bg-white/80 p-8 md:p-12">
            <h4 class="text-lg md:text-2xl mb-6 text-gray-700 font-semibold capitalize">Login to your account</h4>
            <form autocomplete="off" action="/users/login" method="post" class="space-y-4">
                <input class="bg-zinc-100 w-full px-4 py-3 border border-zinc-200 rounded-lg focus:ring-2 focus:ring-yellow-300 transition" type="email" placeholder="Email" name="email">
                <input class="bg-zinc-100 w-full px-4 py-3 border border-zinc-200 rounded-lg focus:ring-2 focus:ring-yellow-300 transition" type="password" placeholder="Password" name="password">
                <button type="submit" class="w-full py-3 bg-blue-500 hover:bg-blue-600 text-white font-bold rounded-lg shadow transition">Login</button>
            </form>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>